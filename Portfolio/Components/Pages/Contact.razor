    </div>
    <div id="__light">
        <img id="__ray" src="images/light-ray.png" />
    </div>


    <EditForm OnValidSubmit="Submit" Model="NewMessage">
        <DataAnnotationsValidator />
        <div class="container">
            <div id="__message-wrapper" class='card @(Sent?"sending":"default")'>
                <div class="stamp h3 text-orange-300 d-flex card-header">
                    Leave Me a Message

                    <img src="/images/face2.png" />
                </div>
                <div class="card-body p-0">

                    <div class="hstack my-2">
                        <div class="vstack mt-1 mx-2">


                            <div class="form-input mx-2 mt-2">

                                <label class="form-input mb-1 text-orange-300">Subject</label>
                                <InputText tabindex="1" class="form-control" id="__subject-input" @bind-Value="NewMessage.Subject"></InputText>
                            </div>
                            <div class="mx-2 form-input mt-1">
                                <label class="form-label mt-1 text-orange-300">Email</label>
                                <InputText tabindex="2" class="form-control" id="__from-email" @bind-Value="NewMessage.FromEmail"></InputText>
                            </div>
                            <div class="form-input mx-2 mt-1">
                                <label class="form-label mt-1 text-orange-300">Name</label>
                                <InputText tabindex="3" class="form-control" id="__from-name" @bind-Value="NewMessage.FromName"></InputText>
                            </div>
                            <div class="form-input mx-2 mt-1 mb-1">
                                <button tabindex="5" type="submit" class="mt-2 btn btn-tertiary">Submit</button>

                            </div>
                        </div>
                        <div class="form-input">
                            <label class="form-label text-input text-orange-300">Write a Message</label>
                            <InputTextArea tabindex="4" class="form-control fs-16 text-200" id="__body-input" @bind-Value='NewMessage.Body'></InputTextArea>
                            <ValidationSummary class="position-absolute top-50 v-message" />

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </EditForm>
    <div class="container">

        <div id="__link-wrapper" class="card">

